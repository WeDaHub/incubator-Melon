.game-over {
  position: absolute;
  z-index: 3;
  background-color: rgba(255, 255, 255, 0.8);
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  text-align: center;
  padding-top: 20vw;
  box-sizing: border-box;
}
.game-over-score {
  font-size: 20px;
  margin-bottom: 10px;
}
.game-over-tips {
  font-weight: bold;
  font-size: 30px;
}
.game-tips {
  position: absolute;
  left: 0;
  bottom: -40px;
  width: 100%;
  font-size: 14px;
  text-align: center;
}
.game-tips-melon{
  width: 20px;
  height: 20px;
  vertical-align: bottom;
}
/* =========================== 登录 ====================  */
.start {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  box-sizing: border-box;
  padding-top: 60px;
  background-color: #faf8ee;
}
.start-logo {
  width: 100px;
  height: 100px;
  margin: auto;
  display: block;
}
.start-load {
  display: flex;
  text-align: center;
  margin-top: 20px;
  justify-content: center;
}
.start-load view {
  width: 6px;
  height: 6px;
  border: 1px solid #ccc;
  border-radius: 4px;
  margin: 0 5px;
}
.start-load view:nth-child(1) {
  animation: loadingAni 2s infinite;
}
.start-load view:nth-child(2) {
  animation: loadingAni 2s infinite 0.5s;
}
.start-load view:nth-child(3) {
  animation: loadingAni 2s infinite 1s;
}
.start-load view:nth-child(4) {
  animation: loadingAni 2s infinite 1.5s;
}
.start-btn {
  width: 140px !important;
  font-size: 20px;
  background-color: #e19168;
  color: #fff;
  border-radius: 5px;
  text-align: center;
  height: 40px;
  line-height: 40px;
  font-weight: bold;
  margin-top: 240px;
  padding: 0;
}
@keyframes loadingAni {
  0% {
    background-color: #ccc;
  }

  25% {
    background-color: #ccc;
  }

  26% {
    background-color: transparent;
  }

  100% {
    background-color: transparent;
  }
}
/* =========================== 排行榜 ====================  */
.dialog {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 101;
  background-color: rgba(0, 0, 0, 0.6);
}
.dialog-content {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 260px;
  padding: 0 20px;
  margin-top: -36px;
  transform: translate3d(-50%, -50%, 0);
  border-radius: 10px;
  background-color: #faf8ee;
}
.dialog-close {
  position: absolute;
  left: 50%;
  bottom: -56px;
  width: 36px;
  height: 36px;
  transform: translateX(-50%);
}
.dialog-close image {
  width: 100%;
  height: 100%;
}
.dialog-title {
  height: 60px;
  font-size: 20px;
  text-align: center;
  line-height: 60px;
  font-weight: bold;
}
.rank {
  overflow: auto;
  height: 340px;
}
.rank-item {
  height: 30px;
  display: flex;
  padding: 10px 0;
  line-height: 30px;
  border-bottom: 1px solid #ebedf0;
  justify-content: space-between;
}
.rank-item:first-child {
  padding-top: 0;
}
.rank-item:last-child {
  border-bottom: none;
}
.rank-serial {
  position: relative;
  color: #fff;
  width: 20px;
  height: 30px;
  overflow: hidden;
  font-size: 12px;
  text-align: center;
  font-weight: bold;
  line-height: 28px;
}
.rank-serial image {
  position: absolute;
  top: 50%;
  left: 0;
  width: 20px;
  display: block;
  transform: translateY(-50%);
}
.rank-serial view {
  position: relative;
}
.rank-avatar {
  width: 30px;
  height: 30px;
  display: block;
  border-radius: 100%;
}
.rank-nick {
  width: 100px;
  opacity: 0.7;
  font-size: 16px;
}
.rank-score {
  font-weight: bold;
}
.rank-tips {
  height: 60px;
  font-size: 14px;
  text-align: center;
  line-height: 60px;
}
.rank-tips text {
  padding: 0 6px;
  font-weight: bold;
}
.rule {
  height: 370px;
  overflow: auto;
}
.rule-title {
  font-weight: bold;
  padding-bottom: 10px;
}
.rule-desc {
  line-height: 24px;
  padding-bottom: 10px;
}
.rule-item {
  height: 40px;
  display: flex;
  padding-bottom: 20px;
  justify-content: space-evenly;
}
.rule-item image {
  width: 40px;
  height: 40px;
  border-radius: 100%;
}
.rule-item view {
  width: 60px;
  text-align: center;
  line-height: 40px;
  font-weight: bold;
}
.rule-spacing {
  height: 30px;
}
.rule-melon-img{
  width: 24px;
  height: 24px;
  vertical-align: bottom;
}
