.container {
  position: relative;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  color: #776e65;
  background-color: #faf8ee;
}
/* =========================== 头部 ====================  */
.head {
  position: absolute;
  top: 5vh;
  width: 93vw;
  text-align: center;
}
.head-top {
  height: 60px;
  display: flex;
}
.head-avatar {
  width: 60px;
  height: 60px;
  border: 2px solid #bbada0;
  overflow: hidden;
  box-sizing: border-box;
  border-radius: 50%;
}
.head-content {
  flex: 1;
  padding: 0 10px;
  font-size: 16px;
  text-align: left;
  line-height: 30px;
  overflow: hidden;
}
.head-nick {
  height: 30px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.head-best {
  font-weight: bold;
}
.head-score {
  color: #fff;
  width: 100px;
  height: 48px;
  padding: 6px 0;
  font-size: 16px;
  line-height: 24px;
  border-radius: 5px;
  background-color: #bbada0;
}
.head-score-tips {
  opacity: 0.7;
}
.head-score-number {
  font-weight: bold;
}
.head-bottom {
  display: flex;
  padding-top: 20px;
  justify-content: space-between;
}
.head-btn {
  font-size: 20px;
  background-color: #bbada0;
  color: #fff;
  border-radius: 5px;
  width: 80px;
  text-align: center;
  height: 40px;
  line-height: 40px;
  font-weight: bold;
}
.head-btn-chigua {
  background-color: #e6c543;
}
.head-icon {
  width: 40px;
  height: 40px;
  border-radius: 5px;
  background-color: #bbada0;
}
.head-icon image {
  width: 100%;
  height: 100%;
}
/* =========================== game ====================  */
.game {
  margin-top: 15vh;
  position: absolute;
  padding-top: 5vw; 
  padding-left: 1vw;
  background: #bbada0;
  border-radius: 6px;
  width: 93vw;
  height: 93vw;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-touch-callout: none;/* 禁用系统默认菜单 */
  -ms-touch-callout: none;
  -webkit-user-select: none;/* css控制文字不能被选中 */
  -moz-user-select: none;
  -ms-user-select: none;/* 当触控事件发生在元素上时，不进行任何操作 */
  -ms-touch-action: none;
  touch-action: none;
}
.cell {
  width: 19vw;
  height: 19vw; 
  margin-left: 3vw;
  margin-bottom: 3vw;
  float: left;
  border-radius: 5px;
  box-sizing: border-box;
  background: rgba(238, 228, 218, 0.35);
  overflow: hidden;
}
.cell-con { 
  width: 19vw;
  height: 19vw; 
  line-height: 19vw;
  position: absolute;
  font-size: 35px;
  font-weight: bold;
  text-align: center;
  border-radius: 5px;
}  
.cell-con image {
  width:100%;
  height: 100%;
}
.cell-con-2 { background: #eee4da; }
.cell-con-4 { background: #ede0c8; }
.cell-con-8 {
  color: #f9f6f2;
